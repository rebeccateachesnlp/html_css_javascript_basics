<body>
    <!-- The header section contains the title of the website and the navigation bar -->
    <header class="site-header">
        <h1 class="site-title">Website Title</h1>
        <!-- The navigation bar helps users move between different sections of the website -->
        <nav class="main-navigation">
            <ul class="nav-list">
                <!-- Each list item represents a link to a section of the page -->
                <li class="nav-item"><a class="nav-link" href="#home">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                <li class="nav-item"><a class="nav-link" href="#services">Services</a></li>
                <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>
    
    <!-- The main section contains the primary content of the webpage -->
    <main class="main-content">
        <!-- This is the home section, typically the first thing visitors see -->
        <section class="section home-section" id="home">
            <h2 class="section-title">Welcome</h2>
            <p class="section-description">This is the home section of the webpage.</p>
        </section>
        
        <!-- The about section provides information about the website or organization -->
        <section class="section about-section" id="about">
            <h2 class="section-title">About Us</h2>
            <p class="section-description">This section contains information about us.</p>
        </section>
        
        <!-- The services section highlights the services offered -->
        <section class="section services-section" id="services">
            <h2 class="section-title">Our Services</h2>
            <p class="section-description">Details about the services offered will go here.</p>
        </section>

        <!-- The contact section provides information on how to reach out -->
        <section class="section contact-section" id="contact">
            <h2 class="section-title">Contact Us</h2>
            <p class="section-description">Here is how you can reach us.</p>
        </section>
    </main>
    
